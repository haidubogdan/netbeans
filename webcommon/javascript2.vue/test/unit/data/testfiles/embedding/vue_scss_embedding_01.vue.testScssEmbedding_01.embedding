
    $font-stack: Helvetica, sans-serif;
    $primary-color: #333;

    p {
      font: 100% $font-stack;
      color: $primary-color;
    }
    @mixin theme($theme: DarkGray) {
      background: $theme;
      box-shadow: 0 0 1px rgba($theme, .25);
      color: #fff;
    }

    .info {
      @include theme;
    }
